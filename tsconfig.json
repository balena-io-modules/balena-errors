{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "lib": ["es2019"],
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*.ts"
  ]
}

{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "lib": ["es5", "es6"],
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@resin.io"
    ]
  },
  "include": [
    "lib/**/*.ts"
  ]
}

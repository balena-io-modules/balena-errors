{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": ["es5", "es6"]
  },
  "include": [
    "lib/**/*.d.ts",
    "tests/**/*.d.ts",
    "lib/**/*.ts"
  ]
}

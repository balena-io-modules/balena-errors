{
  "name": "balena-errors",
  "version": "4.4.0",
  "description": "Collection of Balena JavaScript errors",
  "main": "build/errors.js",
  "types": "build/errors.d.ts",
  "homepage": "https://github.com/balena-io-modules/balena-errors",
  "repository": {
    "type": "git",
    "url": "git://github.com/balena-io-modules/balena-errors.git"
  },
  "files": [
    "build/"
  ],
  "keywords": [
    "balena",
    "resin",
    "errors"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test:node": "mocha -r ts-node/register --reporter spec tests/**/*.spec.ts",
    "test:browser": "karma start",
    "test:ts-compatibility": "npx typescript@~2.4.2 --noEmit --project ./tsconfig.dist.json",
    "lint": "balena-lint --typescript --fix lib tests",
    "test": "npm run lint && npm run build && npm run test:ts-compatibility && npm run test:node && npm run test:browser && catch-uncommitted",
    "build": "rimraf ./build && npm run prettify && tsc && npm run readme",
    "prepare": "npm run build",
    "prettify": "prettier --use-tabs --single-quote --write lib/*.ts tests/**/*.spec.ts",
    "readme": "jsdoc2md --template doc/README.hbs build/errors.js > README.md"
  },
  "author": "Juan Cruz Viotti <juan@balena.io>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0"
  },
  "devDependencies": {
    "@balena/lint": "^5.0.2",
    "@resin.io/types-mochainon": "^2.0.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.14",
    "balena-config-karma": "^2.0.0",
    "catch-uncommitted": "^1.6.1",
    "jsdoc-to-markdown": "^3.0.0",
    "karma": "^1.7.0",
    "mocha": "^3.4.0",
    "mochainon": "^2.0.0",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "tslib": "^1.11.1",
    "typed-error": "^3.0.0"
  }
}
